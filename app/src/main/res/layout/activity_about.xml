<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_splash"
        android:contentDescription="splash logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_id"
        android:layout_marginTop="10dp"
        android:text="W3Lager"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFEFE"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:textStyle="italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Ihre Lagerverwaltung für die Luftfracht"
        android:textColor="#FFFEFE"
        android:textSize="15dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Copyright ©W3Coach 2018-2023"
        android:textColor="#FFFEFE"
        android:textSize="10dp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/close_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/closebutton"
        android:onClick="closeClick"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:ignore="UsingOnClickInXml" />

</RelativeLayout>